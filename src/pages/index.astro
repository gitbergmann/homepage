---
import RootLayout from "../layout/RootLayout.astro";
import Section from "../components/ui/Section.astro";
import H2 from "../components/ui/H2.astro";
import Intro from "../components/content/Intro.astro";
import Techstack from "../components/content/Techstack.astro";
import PortfolioItem from "../components/content/PortfolioItem.astro";
import Vita from "../components/content/Vita.astro";
import Budget from "../components/vue/Budget.vue";

const intro = {
    text: "Webentwickler & Software-Engineer",
    text2: "Seit über 8 Jahren erstelle ich professionelle Webseiten, mit Herz und Hirn, performant und responsiv.",
};

const techstack = {
    headline: "Mein Techstack",
};

const rubiks = {
    name: "Funktionierender Rubik's Cube",
    url: "https://rubiks.lennartbergmann.com",
    text: "Der Würfel lässt sich scramblen und lösen. Die große Schwierigkeit war es herauszufinden welche Seite sich wann drehen muss, und dann für jeden kleinen Würfel die neue Position und Rotation zu berechnen.",
    text2: "React habe ich hier deshalb gewählt, weil es durch React Three Fiber sehr angenehm mit three.js zusammenspielt. ",
    techstack: ["React", "React Three Fiber", "Typescript", "Tailwind"],
    github: "https://github.com/gitbergmann/rubiks/",
};

const bhs = {
    name: "Berry Hunt Survivors",
    url: "https://store.steampowered.com/app/2377320/Berry_Hunt_Survivors/",
    text: "Berry Hunt Survivors ist ein PC Spiel, das ich zusammen mit einem Freund entwickelt habe. Es ist ein Action Roguelike in dem man als Oma oder Opa spielt und böse Monster besiegen muss.",
    text2: "Wir haben bis auf den Soundtrack alles selber gemacht und da wir vorher weder mit C# noch Unity nennenswerte Erfahrung hatten, war das eine große Herausforderung. Trotz einiger frustiger Momente hat es aber eine Menge Spaß gemacht.",
    techstack: ["C#", "Unity"],
};

const budget = {
    name: "Budget SPA",
    url: "https://budget.lennartbergmann.com",
    text: "Eine kleine Webseite mit der man sein Budget im Blick behalten kann. Vue.js habe ich vorallem gewählt um etwas Erfahrung damit zu sammeln, aber natürlich passt es hervorragend zu einer kleinen SPA wie dieser.",
    techstack: ["Vue.js", "Typescript", "Tailwind"],
    github: "https://github.com/gitbergmann/budget",
};

const lb = {
    name: "lennartbergmann.com",
    url: "/",
    text: "Diese Seite wollte ich vorallem simpel halten. Eine statische Seite ergibt hier einfach Sinn, und ich habe dafür Astro gewählt, weil ich damit schnell Layouts bauen kann, und es einfach ist interaktive Elemente zu integrieren.",
    techstack: ["Astro", "three.js", "Typescript", "Tailwind"],
    github: "https://github.com/gitbergmann/homepage",
};

const vita = {
    headline: "Vita",
    vita: [
        {
            title: "Fullstack Webentwickler",
            date: "09/2017 - Jetzt",
            description: "Moinbits GbR",
        },
        {
            title: "Webentwickler PHP",
            date: "09/2016 - 08/2017",
            description: "Kreuzfahrtberater",
        },
        {
            title: "Webentwickler PHP",
            date: "03/2016 - 08/2016",
            description: "Ausflugsbutler",
        },
        {
            title: "Bachelor of Science",
            date: "02/2021",
            description: "Software-System-Entwicklung, Universität Hamburg",
        },
        {
            title: "Sprachkenntnisse",
            description: "Deutsch (Muttersprache), Englisch (fließend)",
        },
    ],
};
---

<RootLayout
    pageTitle="Lennart Bergmann"
    link="/en/"
    flag="union-jack"
    alt="Switch language to english"
    lang="de"
    metaDescription="Seit über 8 Jahren erstelle ich professionelle Webseiten, mit Herz und Hirn, performant und responsiv."
>
    <div class="md:flex gap-8 max-w-5xl px-4 sm:px-6 my-0 mx-auto md:my-30">
        <Intro text={intro.text} text2={intro.text2} />
        <Techstack headline={techstack.headline} />
    </div>

    <div class="max-w-5xl my-0 mx-auto px-4 sm:px-6">
        <H2>Portfolio</H2>
    </div>

    <Section>
        <div class="md:flex flex-row-reverse justify-between">
            <div class="mb-6 md:mb-0 md:w-1/2">
                <div id="cube" class="flex justify-center"></div>
                <p
                    class="md:max-w-1/2 mx-auto text-center text-gray-500 dark:text-gray-400"
                >
                    Das ist nur ein Würfel. Drag zum rotieren, scroll/pinch für
                    Zoom.
                </p>
            </div>
            <PortfolioItem
                name={rubiks.name}
                url={rubiks.url}
                text={rubiks.text}
                text2={rubiks.text2}
                techstack={rubiks.techstack}
                github={rubiks.github}
            />
        </div>
    </Section>

    <Section>
        <div class="md:flex justify-between">
            <div
                class="mb-4 -mt-8 -ml-1 md:w-1/2 flex items-center justify-center"
            >
                <video
                    width="381"
                    height="256"
                    src="/bhs.webm"
                    autoplay
                    loop
                    muted></video>
            </div>
            <PortfolioItem
                name={bhs.name}
                url={bhs.url}
                text={bhs.text}
                text2={bhs.text2}
                techstack={bhs.techstack}
            />
        </div>
    </Section>

    <Section>
        <div class="md:flex flex-row-reverse items-start gap-4 justify-between">
            <div class="mb-4 md:w-1/2">
                <Budget
                    title="Ausgaben"
                    rent="Miete"
                    electricity="Strom"
                    groceries="Einkauf"
                    remove="Entfernen"
                    client:load
                />
                <p
                    class="md:max-w-1/2 mx-auto text-center text-gray-500 dark:text-gray-400"
                >
                    Ein interaktives Beispiel.
                </p>
            </div>
            <PortfolioItem
                name={budget.name}
                url={budget.url}
                text={budget.text}
                techstack={budget.techstack}
                github={budget.github}
            />
        </div>
    </Section>

    <Section>
        <div class="flex flex-row-reverse">
            <PortfolioItem
                name={lb.name}
                url={lb.url}
                text={lb.text}
                techstack={lb.techstack}
                github={lb.github}
            />
        </div>
    </Section>

    <Section>
        <Vita headline={vita.headline} vita={vita.vita} />
    </Section>
</RootLayout>
