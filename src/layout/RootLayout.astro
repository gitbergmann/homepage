---
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import "../styles/global.css";

const { pageTitle, link, flag, alt, lang, metaDescription } = Astro.props as {
    pageTitle: string;
    link: string;
    flag: string;
    alt: string;
    lang: "de" | "en";
    metaDescription: string;
};
---

<html lang={lang}>
    <head>
        <meta charset="utf-8" />
        <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
        <meta name="viewport" content="width=device-width" />
        <meta name="generator" content={Astro.generator} />
        <meta name="description" content={metaDescription} />
        <link
            rel="alternate"
            hreflang="de"
            href="https://lennartbergmann.com/"
        />
        <link
            rel="alternate"
            hreflang="en"
            href="https://lennartbergmann.com/en/"
        />
        <title>{pageTitle}</title>
    </head>
    <body
        class="antialiased bg-gray-50 text-gray-950 dark:bg-gray-950 dark:text-gray-50"
    >
        <!-- <div class="px-4 sm:px-6 py-3 max-w-5xl my-0 mx-auto"> -->
        <div class="">
            <Header link={link} flag={flag} alt={alt} />
            <main>
                <slot />
            </main>
            <Footer />
        </div>
        <script>
            import "../scripts/dark-mode.ts";
            import "../scripts/cube.ts";
        </script>
    </body>
</html>
