---
import H3 from "../ui/H3.astro";
import Link from "../ui/Link.astro";
import Tech from "./Tech.astro";

type PortfolioItemProps = {
    name: string;
    url: string;
    text: string;
    text2: string;
    techstack: string[];
    github: string;
};

const { name, url, text, text2, techstack, github } =
    Astro.props as PortfolioItemProps;
---

<div class="md:w-1/2">
    <H3>
        <Link name={name} url={url} />
    </H3>
    <p class="mb-2">
        {text}
    </p>
    {text2 ? <p class="mb-6">{text2}</p> : ""}
    <h4 class="mb-2 font-semibold text-lg">Techstack:</h4>
    <ul class="mb-4 flex justify-start gap-x-4 gap-y-2 flex-wrap">
        {
            techstack.map((tech) => (
                <li>
                    <Tech name={tech} />
                </li>
            ))
        }
    </ul>
    {github ? <Link name="Github" url={github} /> : ""}
</div>
